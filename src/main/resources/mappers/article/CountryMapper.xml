<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dev.jwkim.jgv.mappers.Movie.CountryMapper">
    <select id="selectCountryIdByName" resultType="Integer">
        SELECT co_num
        FROM jgv.country
        WHERE co_name = #{countryName}
    </select>

    <insert id="insertMovieCountry" useGeneratedKeys="true" keyProperty="coNum" parameterType="dev.jwkim.jgv.entities.Movie.CountryEntity">
        INSERT INTO jgv.country (co_name)
        VALUES (#{coName})
    </insert>

    <insert id="insertMovieCountryMapping">
        INSERT INTO jgv.movie_country (co_num, mo_num)
        VALUES (#{conum}, #{monum})
    </insert>

    <delete id="deleteAllCountry">
        DELETE FROM jgv.country
    </delete>

    <delete id="deleteAllCountryMapping">
        DELETE FROM jgv.movie_country
    </delete>
</mapper>